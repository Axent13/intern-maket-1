.skill
  text-align center
  margin-top 11px
  @media only screen and (min-width 1631px)
    margin-top 26px
  &:first-child
    margin-top 23px
    @media only screen and (min-width 1631px)
      margin-top 37px
  &__name
    text-transform uppercase
    font-size 1.75rem
    @media only screen and (min-width 1631px)
      font-size 2.5rem
      letter-spacing 1px
  &__points
    @media only screen and (min-width 1631px)
      margin 8px 0 10px 0
  &__point
    list-style none
    display inline-block
    width 18px
    height 18px
    border-radius 18px
    margin-right 12px
    @media only screen and (min-width 1631px)
      width 28px
      height 28px
      margin-right 15px
    &_on
      background-color #3d6cb0
    &_off
      background-color #e6e6e6