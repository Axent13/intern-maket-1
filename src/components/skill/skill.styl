.skill
  text-align center
  margin-top 16px
  @media only screen and (min-width 1631px)
    margin-top 26px
  &__name
    text-transform uppercase
    font-size 1.75rem
    @media only screen and (min-width 1631px)
      font-size 2.5rem
      letter-spacing 1px
  &__points
    -webkit-margin-before 10px
    -webkit-margin-after 0
  &__point
    list-style none
    display inline-block
    width 18px
    height 18px
    border-radius 18px
    margin-right 15px
    @media only screen and (min-width 1631px)
      width 28px
      height 28px
      margin-right 17px
    &_on
      background-color #3d6cb0
    &_off
      background-color #e6e6e6