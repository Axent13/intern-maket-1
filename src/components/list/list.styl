.list
  &__point
    float left
    width 22px
    height 22px
    background-color black
    border-radius 17px
    margin 9px 0 0 13px
    @media only screen and (min-width 1631px)
      width 31px
      height 31px
      margin 13px 0 0 20px
  &__item
    margin 0 0 14px 59px
    @media only screen and (min-width 1631px)
      margin 0 0 13px 83px
  &__item-name
    text-transform uppercase
    font-size 1.75rem
    font-weight 700
    display inline-block
    vertical-align middle
    @media only screen and (min-width 1631px)
      font-size 2.6rem
      margin-bottom 3px
    &_color
      &_blue
        color #3d6cb0
      &_black
        color black
  &__period
    font-size 1.75rem
    display inline-block
    vertical-align middle
    margin-left 19px
    @media only screen and (min-width 1631px)
      font-size 2.5rem
  &__item-subname
    font-size 1.75rem
    text-transform uppercase
    margin-bottom 6px
    @media only screen and (min-width 1631px)
      font-size 2.5rem
  &__text
    margin 0 0 11px 0
    line-height 20px
    @media only screen and (min-width 1631px)
      font-size 1.3rem
      line-height 30px