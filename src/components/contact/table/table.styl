.table
  display table
  width 470px
  margin-top 1px

@media only screen and (max-width 1280px)
  .table
    width 60%
    margin 0 auto

@media only screen and (min-width 1631px)
  .table
    width 670px
    margin-top 4px

.table__row
  display table-row

.table__left-cell
  display table-cell
  width 30%
  padding-top 32px
  color #3d6cb0
  text-transform uppercase
  font-size 22px

@media only screen and (max-width 1280px)
  .table__left-cell
    width 50%

@media only screen and (min-width 1631px)
  .table__left-cell
    padding-top 42px
    font-size 32px

.table__right-cell
  display table-cell
  font-size 24px

@media only screen and (min-width 1631px)
  .table__right-cell
    font-size 32px