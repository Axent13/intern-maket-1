.table
  display table
  width 60%
  margin 0 auto
  @media only screen and (min-width 1280px)
    width 470px
    margin-top 1px
  @media only screen and (min-width 1631px)
    width 670px
    margin-top 4px
  &__row
    display table-row
  &__left-cell
    display table-cell
    width 50%
    padding-top 32px
    color #3d6cb0
    text-transform uppercase
    font-size 1.4rem
    @media only screen and (min-width 1280px)
      width 30%
    @media only screen and (min-width 1631px)
      padding-top 42px
      font-size 2rem
  &__right-cell
    display table-cell
    font-size 1.4rem
    @media only screen and (min-width 1631px)
      font-size 2rem